<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Notepad.DefaultPlugins.GoToLine.GoToLinePluginControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Visibility="Collapsed">

    <Grid>
        <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Width="350"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,80,0,0"
                Padding="16">
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>
            <StackPanel Spacing="12">
                <TextBlock Text="Go to Line" FontWeight="SemiBold" FontSize="16"/>
                <TextBlock x:Name="HintText" FontSize="12" Opacity="0.7"
                           Text="Enter line number or line:column (e.g. 10 or 10:5)"/>
                <TextBox x:Name="InputTextBox"
                         PlaceholderText="Line number (e.g. 10 or 10:5)"
                         PreviewKeyDown="InputTextBox_PreviewKeyDown"
                         KeyDown="InputTextBox_KeyDown"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button Content="Cancel" Click="Cancel_Click" TabIndex="2"/>
                    <Button Content="Go" Style="{ThemeResource AccentButtonStyle}" Click="Go_Click" TabIndex="1"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
